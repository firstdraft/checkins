<!-- Validation failure messages -->
<% if @resource.present? %>
  <% if @resource.errors.any? %>
    <% @resource.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new resource
</h1>

<hr>

<form action="/create_resource" method="post">
  <!-- Label and input for meeting_schedule_hash -->
  <div class="form-group">
    <label for="meeting_schedule_hash">
      Meeting schedule hash
    </label>

    <input type="text" id="meeting_schedule_hash" name="meeting_schedule_hash" class="form-control" value="<%= @resource.try(:meeting_schedule_hash) %>">
  </div>

  <!-- Label and input for lis_outcome_service_url -->
  <div class="form-group">
    <label for="lis_outcome_service_url">
      Lis outcome service url
    </label>

    <input type="text" id="lis_outcome_service_url" name="lis_outcome_service_url" class="form-control" value="<%= @resource.try(:lis_outcome_service_url) %>">
  </div>

  <!-- Label and input for lti_resource_link_id -->
  <div class="form-group">
    <label for="lti_resource_link_id">
      Lti resource link
    </label>

    <input type="text" id="lti_resource_link_id" name="lti_resource_link_id" class="form-control" value="<%= @resource.try(:lti_resource_link_id) %>">
  </div>

  <!-- Label and input for context_id -->
  <div class="form-group">
    <label for="context_id">
      Context
    </label>

    <input type="text" id="context_id" name="context_id" class="form-control" value="<%= @resource.try(:context_id) %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create resource
  </button>
</form>

<hr>

<a href="/resources">
  Go back
</a>
