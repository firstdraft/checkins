<div class="row justify-content-center mb-3">
  <div class="col-md-8">
    <div class="card">
      <h2 class="card-header h4">
        User profile
      </h2>
      <div class="card-body">

        <dl>
          <dt>
            First name
          </dt>
          <dd>
            <%= @user.first_name %>
          </dd>

          <dt>
            Last name
          </dt>
          <dd>
            <%= @user.last_name %>
          </dd>

          <dt>
            Preferred name
          </dt>
          <dd>
            <%= @user.preferred_name %>
          </dd>
        </dl>
        <hr>
        <%= link_to "Edit profile", edit_user_url %>
      </div>
    </div>
  </div>
</div>
