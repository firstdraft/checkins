<h1>
  User #<%= @user.id %> details
</h1>

<a href="/users/<%= @user.id %>/edit">
  Edit user
</a>

<hr>

<dl>
  <dt>
    First name
  </dt>
  <dd>
    <%= @user.first_name %>
  </dd>

  <dt>
    Last name
  </dt>
  <dd>
    <%= @user.last_name %>
  </dd>

  <dt>
    Preferred name
  </dt>
  <dd>
    <%= @user.preferred_name %>
  </dd>

  <dt>
    Lti user
  </dt>
  <dd>
    <%= @user.lti_user_id %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@user.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@user.updated_at) %> ago
  </dd>
</dl>

<a href="/delete_user/<%= @user.id %>">
  Delete user
</a>

<hr>

<a href="/users">
  Go back
</a>
