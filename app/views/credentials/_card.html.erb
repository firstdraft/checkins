<div class="card mb-3">
  <h2 class="card-header h4">
    Credential #<%= credential.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Consumer key</dt>
      <dd><%= credential.consumer_key %></dd>

      <dt>Consumer secret</dt>
      <dd><%= credential.consumer_secret %></dd>

      <dt>Administrator</dt>
      <dd><%= credential.administrator_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified mt-auto">
      <%= link_to_show_or_back credential, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-outline-secondary" %>

      <%= link_to edit_credential_url(credential), class: "btn btn-outline-secondary" do %>
        <i class="fas fa-edit"></i>
      <% end %>

      <%= link_to credential, method: :delete, data: { confirm: "Do you really want to delete this credential?" }, class: "btn btn-outline-secondary" do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(credential.updated_at) %> ago
  </div>
</div>
