<div class="card mb-3">
  <h2 class="card-header h4">
    Check In #<%= check_in.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Enrollment</dt>
      <dd><%= check_in.enrollment_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified mt-auto">
      <%= link_to_show_or_back check_in, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-outline-secondary" %>

      <%= link_to edit_check_in_url(check_in), class: "btn btn-outline-secondary" do %>
        <i class="fas fa-edit"></i>
      <% end %>

      <%= link_to check_in, method: :delete, data: { confirm: "Do you really want to delete this check_in?" }, class: "btn btn-outline-secondary" do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(check_in.updated_at) %> ago
  </div>
</div>
