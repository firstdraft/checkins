<tr>
  <td>
    <%= check_in.id %>
  </td>

  <td>
    <%= time_ago_in_words(check_in.created_at) %> ago
  </td>

  <td>
    <div class="btn-group">
      <%= link_to check_in, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_check_in_url(check_in), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to check_in, method: :delete, data: { confirm: "Do you really want to delete this check_in?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
