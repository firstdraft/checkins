<% was_validated = context.errors.any? %>

<% form_html_options = { novalidate: true, class: "mb-3" } %>

<%= form_for(context, html: form_html_options) do |f| %>
  <div class="form-group">
    <% title_class = "form-control" %>
    <% title_was_invalid = context.errors.include?(:title) %>

    <% if was_validated %>
      <% if title_was_invalid %>
        <% title_class << " is-invalid" %>
      <% else %>
        <% title_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :title %>

    <%= f.text_field :title, class: title_class, placeholder: "Enter title" %>
    <% if title_was_invalid %>
      <% context.errors.full_messages_for(:title).each do |message| %>
        <div class="invalid-feedback">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% credential_id_class = "form-control" %>
    <% credential_id_was_invalid = context.errors.include?(:credential_id) %>

    <% if was_validated %>
      <% if credential_id_was_invalid %>
        <% credential_id_class << " is-invalid" %>
      <% else %>
        <% credential_id_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :credential_id %>

    <%= f.number_field :credential_id, class: credential_id_class, placeholder: "Enter credential" %>
    <% if credential_id_was_invalid %>
      <% context.errors.full_messages_for(:credential_id).each do |message| %>
        <div class="invalid-feedback">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
