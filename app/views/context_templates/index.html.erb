<h1>
  All contexts
</h1>

<a href="/contexts/new">
  Add a new context
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Title
    </th>

    <th>
      Lti context
    </th>

    <th>
      Credential
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @contexts.each do |context| %>
  <tr>
    <td>
      <%= context.id %>
    </td>

    <td>
      <%= context.title %>
    </td>

    <td>
      <%= context.lti_context_id %>
    </td>

    <td>
      <%= context.credential_id %>
    </td>

    <td>
      <%= time_ago_in_words(context.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(context.updated_at) %> ago
    </td>

    <td>
      <a href="/contexts/<%= context.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
