<!-- Validation failure messages -->
<% if @context.errors.any? %>
  <% @context.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit context #<%= @context.id %>
</h1>

<hr>

<form action="/update_context/<%= @context.id %>" method="post">
  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @context.title %>">
  </div>

  <!-- Label and input for lti_context_id -->
  <div class="form-group">
    <label for="lti_context_id">
      Lti context
    </label>

    <input type="text" id="lti_context_id" name="lti_context_id" class="form-control" value="<%= @context.lti_context_id %>">
  </div>

  <!-- Label and input for credential_id -->
  <div class="form-group">
    <label for="credential_id">
      Credential
    </label>

    <input type="text" id="credential_id" name="credential_id" class="form-control" value="<%= @context.credential_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update context
  </button>
</form>

<hr>

<a href="/contexts">
  Go back
</a>
