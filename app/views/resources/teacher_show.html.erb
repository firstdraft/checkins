<div class="row justify-content-center mb-3">
  <div class="col-md-3">
    <div class="list-group" id="list-tab" role="tablist">
      <% @meetings.each do |m| %>
        <a class="list-group-item d-flex justify-content-between align-items-center list-group-item-action <%= "active show" if m == @most_recent_meeting %>" id="list-<%= m.id %>-list" data-toggle="list" href="#list-<%= m.id %>" role="tab" aria-controls="<%= m.id %>"><%= m.start_time.to_date.strftime("%a %-m/%-d/%y") %> <span class="badge badge-success badge-pill"><%= m.check_ins.count %></span></a>
      <% end %>
      <a class="list-group-item d-flex justify-content-between align-items-center list-group-item-action " id="list-unapproved-list" data-toggle="list" href="#list-unapproved" role="tab" aria-controls="unapproved">
        Unapproved <span class="badge badge-success badge-pill"><%= @unapproved_check_ins.count %></span>
      </a>
    </div>
  </div>
  <div class="col-md-8">
    <div class="tab-content" id="nav-tabContent">
      <% @meetings.each do |m| %>
        <div class="tab-pane fade <%= "active show" if m == @most_recent_meeting %>" id="list-<%= m.id %>" role="tabpanel" aria-labelledby="list-<%= m.id %>-list">
          <div class="card">
            <div class="card-header">
              <strong><%= m.start_time.strftime("%a %-m/%-d/%y - %l:%M%P") %></strong>
            </div>
            <div class="card-body">
              <ul class="list-group">
                <%= render collection: @all_check_ins, partial: "/check_ins/table_row_teacher", as: :check_in %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
      <div class="tab-pane fade " id="list-unapproved" role="tabpanel" aria-labelledby="list-unapproved-list">
        <div class="card">
          <div class="card-header">
            <strong>Unapproved CheckIns</strong>
          </div>
          <div class="card-body">
            <ul class="list-group">
              <%= render collection: @unapproved_check_ins, partial: "/check_ins/table_row_teacher", as: :check_in %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
