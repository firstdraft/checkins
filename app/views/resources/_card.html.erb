<div class="card mb-3">
  <h2 class="card-header h4">
    Resource #<%= resource.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Context</dt>
      <dd><%= resource.context_id %></dd>

      <dt>Meeting schedule hash</dt>
      <dd><%= resource.meeting_schedule_hash %></dd>

    </dl>

    <div class="btn-group btn-group-justified mt-auto">
      <%= link_to_show_or_back resource, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-outline-secondary" %>

      <%= link_to edit_resource_url(resource), class: "btn btn-outline-secondary" do %>
        <i class="fas fa-edit"></i>
      <% end %>

      <%= link_to resource, method: :delete, data: { confirm: "Do you really want to delete this resource?" }, class: "btn btn-outline-secondary" do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(resource.updated_at) %> ago
  </div>
</div>
