<h1>
  All enrollments
</h1>

<a href="/enrollments/new">
  Add a new enrollment
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Roles
    </th>

    <th>
      User
    </th>

    <th>
      Context
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @enrollments.each do |enrollment| %>
  <tr>
    <td>
      <%= enrollment.id %>
    </td>

    <td>
      <%= enrollment.roles %>
    </td>

    <td>
      <%= enrollment.user_id %>
    </td>

    <td>
      <%= enrollment.context_id %>
    </td>

    <td>
      <%= time_ago_in_words(enrollment.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(enrollment.updated_at) %> ago
    </td>

    <td>
      <a href="/enrollments/<%= enrollment.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
